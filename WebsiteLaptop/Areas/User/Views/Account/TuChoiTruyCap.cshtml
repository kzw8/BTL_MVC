@{
    ViewBag.Title = "Không đủ quyền truy cập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4 text-danger">@ViewBag.Title</h1>
