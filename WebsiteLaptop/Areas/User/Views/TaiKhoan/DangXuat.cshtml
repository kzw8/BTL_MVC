@{
    ViewBag.Title = "Xác nhận đăng xuất";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - LaptopKZW</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #141e30, #243b55);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .logout-card {
            background: rgba(0, 0, 0, 0.65);
            backdrop-filter: blur(8px);
            border-radius: 16px;
            padding: 40px;
            color: white;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        .btn-logout {
            border-radius: 25px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="logout-card">
        <h3 class="fw-bold mb-4">Bạn có chắc muốn đăng xuất?</h3>
        <p>Chọn <strong>Đăng xuất</strong> nếu bạn muốn thoát khỏi hệ thống.</p>

        <form asp-area="User" asp-controller="TaiKhoan" asp-action="DangXuatXacNhan" method="post" class="d-grid gap-2 mt-4">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger btn-logout">Đăng xuất</button>
            <a asp-controller="Laptop" asp-action="DanhSach" class="btn btn-outline-light btn-logout">Huỷ</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
