@using WebsiteLaptop.Models
@model DanhMuc

@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">✏️ Sửa danh mục</h2>

    <form asp-action="CapNhat" method="post">
        <input type="hidden" asp-for="MaDanhMuc" />
        @Html.Partial("_FormDanhMuc")
        <div class="d-flex justify-content-between">
            <a asp-action="DanhSach" class="btn btn-secondary">⬅️ Quay lại</a>
            <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
